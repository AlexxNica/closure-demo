{
    "angularCompilerOptions": {
        "genDir": "gen",
        "googleClosureOutput": true
    },
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "experimentalDecorators": true,
        "outDir": "built",
        "declaration": true,
        "rootDirs": [
            "src",
            "gen"
        ]
    },
    "exclude": [
        "node_modules",
        "built"
    ]
}